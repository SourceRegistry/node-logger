{
  "name": "@sourceregistry/node-logger",
  "version": "0.0.2",
  "description": "Advanced, pluggable logger for Node.js with multiple transport and formatting options. [WIP]",
  "main": "./dist/index.es.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && vite build",
    "build:docs": "typedoc src/index.ts --out docs --name \"node-logger\" --theme default --excludePrivate --excludeProtected",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SourceRegistry/node-logger.git"
  },
  "keywords": [
    "logger",
    "typescript",
    "nodejs",
    "log",
    "transport",
    "elasticsearch",
    "cef",
    "syslog"
  ],
  "author": "A.P.A. Slaa (a.p.a.slaa@projectsource.nl)",
  "license": "Apache-2.0",
  "type": "module",
  "bugs": {
    "url": "https://github.com/SourceRegistry/node-logger/issues"
  },
  "homepage": "https://github.com/SourceRegistry/node-logger#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@vitest/ui": "^3.2.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "typedoc": "^0.28.14",
    "@vitest/coverage-v8": "^3.2.4",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/git": "^10.0.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer"
      ],
      [
        "@semantic-release/release-notes-generator"
      ],
      [
        "@semantic-release/changelog"
      ],
      [
        "@semantic-release/npm"
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "node-logger(release): ðŸš€ ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
